    <script>
        const cursor = document.getElementById('custom-cursor');
        document.addEventListener('mousemove', (e) => {
            cursor.style.left = e.clientX + 'px';
            cursor.style.top = e.clientY + 'px';
        });

        const log = document.getElementById('log');
        const manual = document.getElementById('manual-typing');
        const systemMessages = [
            "SYS_BOOT: t4r4ntul4_v13.0",
            "SCANNING: Ledger_Leak_Analysis",
            "ALERT: Deterministic_Links_Found",
            "ACTION: Engaging_Manual_Sunder",
            "---------------------------------------"
        ];

        let lineIdx = 0;
        function typeLogs() {
            if (lineIdx < systemMessages.length) {
                let div = document.createElement('div');
                div.className = 'line';
                div.textContent = "> " + systemMessages[lineIdx];
                log.appendChild(div);
                lineIdx++;
                setTimeout(typeLogs, 250);
            } else {
                setTimeout(typeCommand, 600);
            }
        }

        const commandText = "sunder --bypass-forensics --telegram-only";
        let charIdx = 0;
        function typeCommand() {
            if (charIdx < commandText.length) {
                manual.textContent += commandText[charIdx];
                charIdx++;
                setTimeout(typeCommand, 50);
            } else {
                setTimeout(() => {
                    document.getElementById('terminal-screen').style.display = 'none';
                    const main = document.getElementById('main-page');
                    main.style.display = 'flex';
                    setTimeout(() => main.style.opacity = '1', 10);
                }, 800);
            }
        }

        window.onload = () => setTimeout(typeLogs, 400);
    </script>
